            if (e.target === changePasswordModal) {
                changePasswordModal.classList.add('hidden');
            }
        });

        const modal = document.getElementById('confirmModal');
        const openBtn = document.getElementById('deleteAccountBtn');
        const confirmBtn = document.getElementById('confirmDeleteBtn');
        const cancelBtn = document.getElementById('cancelDeleteBtn');
        const form = document.getElementById('deleteAccountForm');

        openBtn.addEventListener('click', () => {
            modal.classList.remove('hidden');
        });

        cancelBtn.addEventListener('click', () => {
            modal.classList.add('hidden');
        });

        confirmBtn.addEventListener('click', () => {
            form.submit();
        });

        modal.addEventListener('click', (e) => {
            if (e.target === modal) {
                modal.classList.add('hidden');
            }
        });

        const deleteModal = document.getElementById('deleteMangaModal');
        const deleteInput = document.getElementById('deleteMangaInput');
        const deleteTitleSpan = document.getElementById('deleteMangaTitle');

        function openDeleteModal(title) {
            deleteInput.value = title;
            deleteTitleSpan.textContent = title;
            deleteModal.classList.remove('hidden');
        }

        function closeDeleteModal() {
            deleteModal.classList.add('hidden');
        }

        window.addEventListener('click', e => {
            if (e.target === deleteModal) closeDeleteModal();
        });

        function ensureGenrePillsVisible(ulId) {
            const ul = document.getElementById(ulId);
            if (!ul) return;

            ul.querySelectorAll('li').forEach(item => {
                if (item.style.display !== 'none') {
                    const pills = item.querySelectorAll('ul.flex.flex-wrap > li');
                    pills.forEach(pill => {
                        pill.style.display = '';
                        pill.classList.remove('hidden');
                    });
                }
            });
        }

        function normalizeString(str) {
            return str.toLowerCase().replace(/['’]/g, '').replace(/[^a-z0-9\s]/g, '');
        }

        function applyFilters() {
            const genreRaw = document.getElementById('genreFilter').value.trim();
            const titleRaw = document.getElementById('titleFilter')?.value.trim() || "";

            const genreFilter = normalizeString(genreRaw).split(/\s+/).filter(Boolean);
            const titleFilter = normalizeString(titleRaw);

            function filterList(ulId) {
                const ul = document.getElementById(ulId);
                if (!ul) return;

                const items = ul.querySelectorAll('li');

                items.forEach(item => {
                    const genresAttr = item.getAttribute('data-genres') ?? '';
                    const genresArray = genresAttr.split(',').map(g => normalizeString(g.trim()));

                    const titleElem = item.querySelector('a.text-lg');
                    const altTitleElem = item.querySelector('p.text-sm');

                    const title = normalizeString(titleElem?.textContent ?? '');
                    const altTitle = normalizeString(altTitleElem?.textContent ?? '');

                    const genreMatches = genreFilter.length === 0 || genreFilter.every(token =>
                        genresArray.some(genre => genre.includes(token))
                    );

                    const titleMatches = titleFilter === '' ||
                        title.includes(titleFilter) ||
                        altTitle.includes(titleFilter);

                    const isFavourite = item.getAttribute('data-fav') === 'true';

                    const favMatches = !showFavouritesOnly || isFavourite;

                    if (genreMatches && titleMatches && favMatches) {
                        item.style.display = '';
                    } else {
                        item.style.display = 'none';
                    }
                });
            }

            filterList('readingList');
            filterList('planToReadList');
            filterList('readList');
            filterList('uptoDateList');
            filterList('onholdList');
            filterList('droppedList');

            ensureGenrePillsVisible('readingList');
            ensureGenrePillsVisible('planToReadList');
            ensureGenrePillsVisible('readList');
            ensureGenrePillsVisible('uptoDateList');
            ensureGenrePillsVisible('onholdList');
            ensureGenrePillsVisible('droppedList');
        }

        let showFavouritesOnly = false;

        document.getElementById('favToggleBtn').addEventListener('click', () => {
            showFavouritesOnly = !showFavouritesOnly;

            const star = document.getElementById('favToggleStar');
            star.style.color = showFavouritesOnly ? '#FFD700' : '#ccc';

            applyFilters();
        });

        document.getElementById('genreFilter').addEventListener('input', applyFilters);
