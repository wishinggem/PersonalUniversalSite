<body>

    <style>
        header {
            display: flex;
            align-items: center; /* Align items vertically */
        }

        .navbar-brand {
            margin-left: 0; /* Remove any default margin to align with the image */
        }
        /* Add additional styles as needed */

        .centre_content {
            align-content: center;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
        }

        .bg-green {
            background-color: darkgreen;
        }

        .bg-black {
            background-color: black;
        }

        .rotate {
            transition: all 0.3s linear;
        }

        .nav-item:hover .rotate {
            transform: rotate(90deg);
        }

        .background-change a {
            transition: all 0.3s linear;
            border-radius: 10px;
        }

            .background-change a:hover {
                background-image: linear-gradient(to right, #f8cdda, #e0c3fc, #a1c4fd);
                color: black !important;
                border-radius: 10px;
            }

        .background-base {
            border-radius: 10px;
        }
    </style>

    <div class="d-flex">
        <div class="flex-column" style="width: 200px;">
            <div style="top: 0; left: 0; height: 100%; position: fixed; z-index: 1000;" class="bg-dark">
                <img src="/MainStaticImages/MainLogo.png" alt="Logo" width="100" height="100" style="margin-right: 10px; margin-left: 12px; margin-top: 10px;" />
                <header>
                    <nav class="navbar navbar-light bg-dark flex-column">
                        <a class="navbar-brand text-white" style="margin-left: 10px;"></a>
                        <ul class="navbar-nav" style="margin-left: 30px;">
                            <li class="nav-item background-base background-change">
                                <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                            </li>
                            <li class="nav-item background-base background-change">
                                <a class="nav-link text-white" asp-area="" asp-page="/Tools/Libraries/MangaLibrary">Manga</a>
                            </li>
                            <li class="nav-item background-base background-change">
                            <a class="nav-link text-white" asp-area="" asp-page="/SMBStart">SMB</a>
                            </li>
                        </ul>
                    </nav>
                </header>
            </div>
        </div>
    </div>

    <div class="flex-grow-1" style="margin-left: 200px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted" style="margin-bottom: 0px;">
        <div class="container">
            <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>